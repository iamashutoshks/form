<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd" >
<module>
  <name>form</name>
  <displayName>${project.name}</displayName>
  <description>${project.description}</description>
  <class>info.magnolia.module.form.FormModule</class>
  <versionHandler>info.magnolia.module.form.setup.FormModuleVersionHandler</versionHandler>
  <version>${project.version}</version>

  <components>
    <id>main</id>
    <type-mapping>
      <type>info.magnolia.module.form.engine.FormDataBinder</type>
      <implementation>info.magnolia.module.form.templates.components.DefaultFormDataBinder</implementation>
    </type-mapping>
  </components>

  <components>
    <id>app-form-form</id>
    <component>
      <type>info.magnolia.pages.app.editor.PagesEditorSubAppView</type>
      <implementation>info.magnolia.pages.app.editor.PagesEditorSubAppViewImpl</implementation>
    </component>
    <component>
      <type>info.magnolia.ui.vaadin.editor.PageEditorView</type>
      <implementation>info.magnolia.ui.vaadin.editor.PageEditorViewImpl</implementation>
    </component>
    <component>
      <type>info.magnolia.pages.app.editor.PageEditorPresenter</type>
      <implementation>info.magnolia.pages.app.editor.PageEditorPresenter</implementation>
    </component>
  </components>



  <dependencies>
    <dependency>
      <name>core</name>
      <version>5.2.2/*</version>
    </dependency>
    <dependency>
      <name>templating</name>
      <version>5.2.2/*</version>
    </dependency>
    <dependency>
      <name>mail</name>
      <version>5.0/*</version>
    </dependency>
  </dependencies>

    <repositories>
    <repository>
      <name>magnolia</name>
      <workspaces>
        <workspace>form</workspace>
      </workspaces>
    </repository>
  </repositories>


</module>
